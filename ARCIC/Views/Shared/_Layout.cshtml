<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Army Capabilities Integration Center</title>
        <link rel="icon" href="@Url.Content("/favicon.ico")" type="image/x-icon" />     
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css") 
        @Scripts.Render("~/bundles/modernizr")
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">        
       <script src="//www.google-analytics.com/analytics.js" async=""></script>
       <script src="http://www.google-analytics.com/plugins/ua/linkid.js" async="" type="text/javascript"></script>
        
        @RenderSection("head", false)

        <!--Analytics-->
        <script type="text/javascript">
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-37685334-1', 'army.mil');
            ga('require', 'linkid', 'linkid.js');
            ga('send', 'pageview');
        </script>
      
    </head>
<body>   
    <div class="">
        <!--Navigation-->
        <header>     
           @Html.Partial("_navMenu")          
        </header>
       @RenderSection("Containerless",false)
        
        @*<br class="" />                      
        <br class="hidden-xs hidden-sm" />  
        <br class="hidden-xs hidden-sm" /> 
        <br class="hidden-xs hidden-sm" />*@ 

        <!--Content-->
        <div id="home1">
            @RenderSection("featured", required: false)

            <div class="container">
                @RenderBody()
            </div>
        </div>
        <!--Footer-->
   
            <footer>
           @Html.Partial("_footer")
        </footer>
        
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $('#relatedContentBtn').hide().slideUp();

         $(document).ready(function () {
             $('.carousel').carousel({ interval: 10000 }).carousel()
         });

         $(function () {
             $('[data-toggle="popover"]').popover()
         });

         jQuery(function () {
             jQuery('#myTab a:first').tab('show')
         });
        
    
    $('#relatedContentChevron').click(function () {
        
        $('#relatedContentBtn').show().slideToggle();        
    });
    
    $('#triggerUp').click(function () {
        
        $('#relatedContentBtn').show().slideUp();
    });

    </script>
    <script src="~/Scripts/related-content.js"></script>

</body>
</html>
