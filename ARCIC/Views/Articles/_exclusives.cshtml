
@{
    var exclusives = ViewBag.exclusives;
  
}


@foreach (var item in exclusives)
{
     <div class="panel panel-default">
            <div class="panel-body clearfix">
                <img class="img-responsive" src="/App_Imgs/App/Icons/Exclusive_016.png" />              
                <h4><b>@item.title </b></h4>
                <div>@item.pubDate</div>
                <div>@item.author</div>
                <a class="btn btn-default bt-sm pull-right" href='@Url.Action("Article", "Articles", new { articleID = item.artID })'>Read</a>

            </div>
        </div>
}
 
       
   
