@model ARCIC.Models.Article
@using ARCIC.App_Code;
@using ARCIC.Models;

@{      
    var article = ViewBag.Data;
    var Archives = Article.GetExclusives().Take(6);
}

<div class="col-md-12">
    @foreach (var item in article)
            {

        <h1 class="page-header"></h1>

       <!-- Content Article  -->
        <div class="col-md-8 clearfix">
            @if (item.pType == "Exclusive")
            {
                <img class="center-block" src="~/App_Imgs/App/Icons/Exclusive_032.png" />

            }

            <div class="panel panel-default">
                <img class="img-responsive thumbnail" src='@("../App_Imgs/Exclusives/" + item.imageURL + "f.jpg")' style="margin-bottom: 0px;" />
                <div class="panel-body clearfix">

                    @if (item.artID == 86)
                    {
                        //Disclaimer
                        <img class="img-responsive" src="http://cdn.warontherocks.com/wp-content/themes/_m/img/logo.png" style="width:148px;" />
                        <h5>"This article was originally published at <a href="http://warontherocks.com" target="_blank">War on the Rocks</a> , an online magazine on strategy, defense, and foreign affairs.  It is reposted with permission."</h5>

                    }

                    <h1><b>@item.title</b></h1>
                    @if (item.pGroup == "/App_Documents/Bios/Nadia-Schadlow.pdf")
                    {
                        <div class="text-muted">@item.author | <a href="@item.pGroup" target="_blank">Biography</a></div>
                    }
                    else
                    {

                    }

                    <hr />

                    <p class="text-muted">@Html.Raw(item.description)</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading"><h4><b>Multimedia</b></h4></div>
                <div class="panel-body">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">

                            </a>
                        </div>
                        <div class="media-body">
                            @*<h4 class="media-heading">Play Video <i class="fa fa-youtube-play"></i></h4>      *@
                            Coming
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading"><h4><b>News</b></h4></div>
                <ul class="list-group">
                    @foreach (var a in Archives)
                    {
                        <li class="list-group-item">@a.title</li>
                    }
                </ul>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading"><h4><b>Documents</b></h4></div>
                <div class="panel-body">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">

                            </a>
                        </div>
                        <div class="media-body">
                            @*<h4 class="media-heading">Play Video <i class="fa fa-youtube-play"></i></h4>      *@
                            Coming

                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>





   
