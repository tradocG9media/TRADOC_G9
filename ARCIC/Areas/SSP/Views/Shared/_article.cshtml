@using ARCIC.Models;
@using ARCIC.Models;
@using ARCIC.App_Code;

@{
    //var data = ViewBag.data;
    IEnumerable<SSPArticle> data = ViewBag.data;
    var articles = data.OrderByDescending(x => x.postDate);
    
    }

@if (articles.Count() > 0)
{
    <div class="list=group">
        <div class="list-group-item active">
            <h4><b>Articles</b></h4>
        </div>


        @foreach (var item in articles)
        {
            <div class="list-group-item">
                <h5>@item.title</h5>
                @*<p>@item.desc</p>*@
                <a href="@item.url" target="_blank">  Go to article <i class="fa fa-external-link"></i>  </a>
            </div>
        }
    </div>
}else
{
    <br/>
   
    <div class="panel panel-default">
        <div class="panel-body">
            <h4><b>Articles</b></h4>
            <p>Check back later</p>
        </div>
    </div>
    
}